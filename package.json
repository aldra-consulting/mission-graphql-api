{
  "$schema": "https://json.schemastore.org/package",
  "name": "@aldra-consulting/mission-graphql-api",
  "version": "1.1.1",
  "description": "A GraphQL API for managing missions.",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git@github.com:aldra-consulting/mission-graphql-api.git"
  },
  "author": {
    "name": "Alexander Zakharov (azaxarov)",
    "email": "alexander.zakharov@aldra.no"
  },
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "main": "src/app.ts",
  "scripts": {
    "build": "run-s clean compile",
    "clean": "run-p clean:lib clean:coverage",
    "clean:coverage": "rimraf coverage",
    "clean:lib": "rimraf lib",
    "commit": "cz",
    "compile": "run-s typescript:compile typescript:transform:paths",
    "debug": "run-s serve:debug",
    "lint": "run-p lint:eslint",
    "lint:eslint": "eslint --ext ts,js,json .",
    "lint:eslint:fix": "eslint --ext ts,js,json . --fix",
    "lint:eslint:staged:fix": "eslint --ext ts,js,json --fix",
    "lint:fix": "run-p lint:eslint:fix",
    "lint:staged:fix": "run-p lint:eslint:staged:fix -- {@}",
    "prepare": "node .husky/install.mjs",
    "serve:debug": "NODE_ENV=development tsx watch --inspect src/app.ts",
    "serve:dev": "NODE_ENV=development tsx watch src/app.ts",
    "serve:prod": "node lib/app.js",
    "start": "run-s serve:dev",
    "test": "run-s clean:coverage test:jest",
    "test:coverage": "run-s clean:coverage test:jest:coverage",
    "test:jest": "jest --passWithNoTests",
    "test:jest:coverage": "jest --passWithNoTests --coverage",
    "test:watch": "jest --passWithNoTests --watchAll",
    "typescript:compile": "tsc -p tsconfig.lib.json",
    "typescript:transform:paths": "tsc-alias -p tsconfig.lib.json"
  },
  "dependencies": {
    "@apollo/server": "^4.10.2",
    "@apollo/subgraph": "^2.7.2",
    "@graphql-tools/utils": "^10.1.2",
    "@sanity/client": "^6.15.13",
    "graphql-tag": "^2.12.6",
    "groq": "^3.37.2",
    "openid-client": "^5.6.5",
    "uuid": "^9.0.1",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@aldra-consulting/eslint-config-typescript": "^1.0.1",
    "@aldra-consulting/typescript-config": "^1.0.0",
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@types/uuid": "^9.0.8",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.2.0",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "semantic-release": "^23.0.8",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5"
  }
}
